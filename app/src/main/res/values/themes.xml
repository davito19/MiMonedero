<resources>

    <style name="Theme.MiMonedero" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/third</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundary</item>
        <item name="colorSecondaryVariant">@color/secundary</item>
        <item name="colorOnSecondary">@color/forth</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MiMonedero.Splash" parent="Theme.MiMonedero">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.MiMonedero.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MiMonedero.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MiMonedero.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>